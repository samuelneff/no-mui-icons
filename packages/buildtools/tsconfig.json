{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2022",
    "verbatimModuleSyntax": false,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": [
    "./packages/buildtools/index.ts"
  ]
}
